<%- include('./partials/header') %>
  <div class="container">
  <h1 id="heading">Randomizer</h1>
  <hr>
    <form name="userInput" method="POST" action="/">
      <div class="form-group">
        <label for="names">Names:</label>
        <input type="text" name="names" class="form-control" id="names">
      </div>
      <div class="form-group">
        <label for="method">Method:</label>
        <div class="radio">
          <label><input type="radio" name="method" value="team-count">Team Count</label>
          <label><input type="radio" name="method" value="number-per-team">Number Per Team</label>
        </div>
      </div>
      <div class="form-group">
        <label for="number">Number:</label>
        <input type="text" name="number" class="form-control" id="number">
      </div>
      <%# <input type="submit" value="submit" class="btn btn-primary" onclick="formValidator()">%>
      <button type="submit" class="btn btn-primary" onclick="formValidator()">Submit</button>
    </form>
    <div class="result" id="result">
      <%if(result){%>
        <%- result %>
        <%}%>
    </div>    
  </div>

<%- include('./partials/footer') %>
